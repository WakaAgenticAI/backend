# Rename to `.env` and adjust values for your environment
APP_ENV=dev
API_V1_PREFIX=/api/v1

# Security
JWT_SECRET=change-me-in-prod
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database & Infra
DATABASE_URL=postgresql+psycopg://user:pass@localhost:5432/waka
REDIS_URL=redis://localhost:6379/0
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=waka-files

# AI services (optional during local dev)
OLLAMA_HOST=http://localhost:11434
WHISPER_HOST=http://localhost:8000
GROQ_API_KEY=
GROQ_MODEL=llama3-8b-8192

RENDER_API_KEY=

# Optional: path to repo-level tools directory used by backend utilities
# Can be absolute or relative to backend/ directory
# If unset, backend will auto-resolve '../../tools'
TOOLS_DIR=../../tools
